<header class="navbar navbar-fixed-top navbar-inverse"style = background-color:#332013>
  <div class="container">
    <%= link_to "We love Coffee", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "ホーム", root_path ,id:"menu"%></li>
        <% if logged_in? %>
          <li><%= link_to "ユーザー一覧", users_path ,id:"menu" %></li>
          <li><%= link_to "おすすめのコーヒー店", help_path ,id:"menu" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" style = background-color:#7b5544 id="menu">
              アカウント <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "マイページ", current_user %></li>
              <li><%= link_to "設定", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ログイン", login_path ,id:"menu" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
