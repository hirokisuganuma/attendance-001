  <table class="table-striped table-bordered">
    <tr>
      <th class="col-md-1 col-lg-1">日付</th>
        <th class="col-md-1 col-lg-1">曜日</th>
          <th class="col-md-1 col-lg-1">退社(時)</th>
              <th class="col-md-1 col-lg-1">退社(時)</th>
                <th class="col-md-1 col-lg-1">退社(時)</th>
                  <th class="col-md-1 col-lg-1">退社(分)</th>
                    <th class="col-md-1 col-lg-1">在社時間</th>
                      <th class="col-md-1 col-lg-1">備考</th>
    </tr>
  </table>
  <table class="table-striped table-bordered">
    <% @works.each do |work| %>
      <tr>
        <th class="col-md-1 col-lg-1"><%= work.day.month %>月<%= work.day.day %>日</td>
          <th class="col-md-1 col-lg-1"><%= %w(日 月 火 水 木 金 土 日)[work.day.wday] %></td>
                        <td class="col-md-1 col-lg-1"><%= work.attendance_time.hour if work.attendance_time %></td>
                          <td class="col-md-1 col-lg-1"><%= work.attendance_time.min if work.attendance_time %></td>
                            <td class="col-md-1 col-lg-1"><%= work.leaving_time.hour if work.leaving_time %></td>
                              <td class="col-md-1 col-lg-1"><%= work.leaving_time.min if work.leaving_time %></td>
                                <td class="col-md-1 col-lg-1"><%= day_work_time(work) %></td>
                                  <td class="col-md-1 col-lg-1"><%= work.remarks %></td>
      </tr>
    <%end%>
  </table>